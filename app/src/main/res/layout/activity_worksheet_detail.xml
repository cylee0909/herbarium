<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/awd_title_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="采集人:\n时间:\n包含:"
        android:padding="10dp"
        android:background="@color/common_text_bg_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <Button
            android:id="@+id/awd_sheets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="批次标本"/>
        <Button
            android:id="@+id/awd_processes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加处理步骤"/>
    </LinearLayout>
    <cn.lemon.view.RefreshRecyclerView
        android:id="@+id/awd_recycler_view"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:load_more_able="false"
        app:refresh_able="false">
    </cn.lemon.view.RefreshRecyclerView>
</LinearLayout>