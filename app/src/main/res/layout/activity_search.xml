<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_bg">
    <ImageView
        android:id="@+id/as_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_back"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/as_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textColorHint="#666666"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:hint="键入学名、中文名、采集号、采集人、地名"
            android:background="#eeeeee"/>
        <com.cylee.lib.widget.StateTextView
            android:id="@+id/as_confirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/as_edit"
            android:text="查询标本"
            android:textSize="24sp"
            android:padding="7dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:background="#cc9900"/>
    </LinearLayout>
</RelativeLayout>