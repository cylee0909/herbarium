<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    >
    <RelativeLayout 
		android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true">
    	
        <ProgressBar android:id="@+id/iknow_alert_dialog_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/iknow_alert_dialog_progress_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
			android:textColor="@android:color/black"
            android:paddingBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/iknow_alert_dialog_progress_bar"/>
        <TextView
            android:id="@+id/iknow_alert_dialog_progress_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
			android:textColor="@android:color/black"
            android:paddingBottom="12dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iknow_alert_dialog_progress_bar"
        />
    </RelativeLayout>
</RelativeLayout>

