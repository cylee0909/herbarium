<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8eef7">
    <RelativeLayout
        android:id="@+id/ard_title_content"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/ard_back"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/icon_back"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/ard_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="标本详情"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="20sp"
            android:gravity="center"/>
        <com.cylee.lib.widget.StateTextView
            android:id="@+id/ard_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="收藏"/>
        <com.cylee.lib.widget.StateTextView
            android:id="@+id/ard_share"
            android:layout_toLeftOf="@+id/ard_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="分享"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ard_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/ard_barcode"
                android:layout_width="wrap_content"
                android:text="CSH000007"
                android:textSize="18sp"
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_barcode"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/ard_achieve"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:text="190-23"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_achieve"
                android:layout_height="match_parent" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.cylee.androidlib.net.RecyclingImageView
                android:id="@+id/ard_thumb_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/ard_photo_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"/>
        </FrameLayout>
        <TextView
            android:id="@+id/ard_info_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="18sp"
            android:background="#c8d6e6"
            tools:text="CSYZXZ06-0582 2002-16-13\n田琪、田琪、田琪、田琪\n福建省宁德市"/>
        <TextView
            android:id="@+id/ard_info_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#fdefe3"
            tools:text="Photinia davidason \n椤木石楠 \n 田琪2015-9-8"/>
    </LinearLayout>
</LinearLayout>